#!/bin/sh

REV=${1:-"HEAD"}
SIMPLE="$(git rev-parse --abbrev-ref "$REV")"

if test -n "$SIMPLE" -a "$SIMPLE" != HEAD
then
	echo "$SIMPLE"
	exit 0
fi

git describe --all --long --abbrev=8 "$REV" 2>/dev/null |\
	awk '{
		$0 = gensub("^[a-zA-Z]+/(.*)-([0-9]+)-g[0-9a-fA-F]{8}$",
			"\\2\t\\1", 1, $0);
		if ($1 != 0) printf("%d + ", $1);
		print $2
	}'

