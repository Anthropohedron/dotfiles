#!/bin/sh

MacVim=/Applications/MacPorts/MacVim.app
MacVimBin=$MacVim/Contents/MacOS/MacVim

isLocal() {
	octet='\.\([0-9]\|[1-9][0-9]\|1[0-9][0-9]\|2[0-4][0-9]\|25[0-5]\)'
	test -z "$SSH_CLIENT" || \
	expr "`echo "$SSH_CLIENT" | cut -d\  -f1`" : \
		'^\(\(10\|127\)'"$octet"'\|192\.168\)'"$octet$octet"'$' \
		>/dev/null
}

isMac() {
	test "$TERM_PROGRAM" = Apple_Terminal -a \
			-z "$SSH_CLIENT" -a \
			-x $MacVimBin && ( \ 
		test -z "$DISPLAY" || \
		expr "$DISPLAY" : '^/.*launch.*$' >/dev/null )
}

isf=false
addp="-p"
for arg in "$@"
do
	case x"$arg" in
		x-f) isf=true ;;
		x-[doOp]) addp="" ;;
	esac
done

UI=term
if isMac
then
	UI=mac
elif test -n "$DISPLAY" && isLocal && command -v gvim >/dev/null
then
	UI=X
fi

case $UI in
	X)
		exec 0</dev/null
		exec 1>/dev/null
		exec 2>&1
		if test `uname` = Darwin && ! $isf
		then
			gvim $addp "$@" &
		else
			exec gvim $addp "$@"
		fi
		;;
	mac)
		unset DISPLAY
		exec 0</dev/null
		exec 1>/dev/null
		exec 2>&1
		$MacVimBin $addp "$@" &
		sleep 2
		open $MacVim
		if $isf
		then
			wait
		fi
		;;
	term)
		unset DISPLAY
		if command -v vim >/dev/null
		then
			exec vim $addp "$@"
		elif echo ':q' | vi --version 2>&1 | grep 'VIM - Vi IMproved' >/dev/null
		then
			exec vi $addp "$@"
		else
			exec vi "$@"
		fi
		;;
esac

