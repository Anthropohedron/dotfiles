#!/bin/sh
if test $# -ne 2
then
	echo "Usage: $0 <class> <jar file>" >&2
	exit 1
fi
TMPF=/tmp/manifest$$
TMPCLASS=`echo "$1" | tr -d '	 ' | tr '/' '.'`
CLASS=`basename $TMPCLASS .class`
if test "$CLASS" = "$TMPCLASS"
then
	CLASS=`basename $TMPCLASS .java`
fi
echo "Main-Class: $CLASS" > $TMPF
jar uvmf $TMPF "$2"
rm -f $TMPF
